<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aplicativo_localizacao_indoor">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.AdminMainActivity"
            android:label="@string/title_activity_admin_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AdminListarPontoActivity" />
        <activity android:name=".activity.AdminCadastraUsuarioActivity" />
        <activity android:name=".activity.AdminCadastraSalaActivity" />
        <activity android:name=".activity.AdminCadastraLocalActivity" />
        <activity android:name=".activity.AdminCadastraPontoActivity" />
        <activity android:name=".activity.AdminPontoReferenciaActivity" />
        <activity android:name=".activity.AdminCadastrarActivity"></activity>
        <activity android:name=".activity.RotaActivity" />
        <activity android:name=".activity.LoginActivity" android:label="@string/title_activity_login" />
        <activity android:name=".activity.LocalizarActivity" />
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>
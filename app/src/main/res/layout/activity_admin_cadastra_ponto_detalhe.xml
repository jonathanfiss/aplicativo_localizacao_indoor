<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminCadastraPontoActivityDetalhe">

    <TextView
        android:id="@+id/tvBSSID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvSSID"
        android:layout_alignTop="@+id/tvSSID"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="194dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:text="@string/hint_BSSID" />

    <TextView
        android:id="@+id/tvSSID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/hint_SSID" />

    <Button
        android:id="@+id/btCadPontoRefAnt"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSSID"
        android:layout_alignStart="@+id/tvSSID"
        android:layout_marginTop="15dp"
        android:text="@string/bt_cad_ponto_ref_ant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/btCadPontoRefAntChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btCadPontoRefAnt"
        android:layout_alignTop="@+id/btCadPontoRefAnt"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/btCadPontoRefAnt" />

    <Button
        android:id="@+id/btCadPontoRefPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCadPontoRefAnt"
        android:layout_alignStart="@+id/btCadPontoRefAnt"
        android:layout_alignEnd="@+id/btCadPontoRefAnt"
        android:layout_marginTop="15dp"
        android:text="@string/bt_cad_ponto_ref_post"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="50dp" />

    <Switch
        android:id="@+id/btCadPontoRefPostChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btCadPontoRefPost"
        android:layout_alignTop="@+id/btCadPontoRefPost"
        android:layout_alignEnd="@+id/btCadPontoRefAntChecked"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/btCadPontoRefPost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPatrimonio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCadPontoRefPost"
        android:layout_alignStart="@+id/btCadPontoRefPost"
        android:layout_marginTop="15dp"
        android:text="@string/tv_patrimonio" />

    <EditText
        android:id="@+id/etPatrimonio"
        android:layout_width="369dp"
        android:layout_height="46dp"
        android:layout_below="@+id/tvPatrimonio"
        android:layout_alignStart="@+id/tvPatrimonio"
        android:layout_alignEnd="@+id/tvBSSID"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="@string/hint_patrimonio"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button
        android:id="@+id/btCadPontoRef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPatrimonio"
        android:layout_alignStart="@+id/etPatrimonio"
        android:layout_alignEnd="@+id/etPatrimonio"
        android:layout_marginTop="25dp"
        android:text="@string/btCadastrarPonto" />

</RelativeLayout>
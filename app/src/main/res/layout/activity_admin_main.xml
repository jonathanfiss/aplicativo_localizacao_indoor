<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AdminMainActivity">

    <Button
        android:id="@+id/btCadastrar"
        android:layout_width="@dimen/activity_button_tamanho_horizontal"
        android:layout_height="@dimen/activity_button_tamanho_vertical"
        android:layout_marginBottom="60dp"
        android:text="Cadastrar"
        app:layout_constraintBottom_toTopOf="@+id/btListar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btListar"
        android:layout_width="@dimen/activity_button_tamanho_horizontal"
        android:layout_height="@dimen/activity_button_tamanho_vertical"
        android:layout_marginBottom="100dp"
        android:text="Listar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
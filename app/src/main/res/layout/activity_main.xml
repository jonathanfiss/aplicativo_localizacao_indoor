<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <!--android:background="@drawable/ifsul_background">-->

    <Button
        android:id="@+id/btLocalizar"
        android:layout_width="@dimen/activity_button_tamanho_horizontal"
        android:layout_height="@dimen/activity_button_tamanho_vertical"
        android:layout_marginBottom="50dp"
        android:text="@string/bt_localizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorTextButton"
        android:background="@color/colorButton"/>

    <Button
        android:id="@+id/btRota"
        android:layout_width="@dimen/activity_button_tamanho_horizontal"
        android:layout_height="@dimen/activity_button_tamanho_vertical"
        android:layout_marginBottom="32dp"
        android:background="@color/colorButton"
        android:text="@string/bt_rota"
        android:textColor="@color/colorTextButton"
        app:layout_constraintBottom_toTopOf="@+id/btLocalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMensagemBoasVindas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/tv_frase_inicial"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btRota"
        app:layout_constraintEnd_toEndOf="@+id/btRota"
        app:layout_constraintStart_toStartOf="@+id/btRota"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="204dp"
        android:layout_height="213dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00999999"
        app:srcCompat="@drawable/icon" />


</android.support.constraint.ConstraintLayout>
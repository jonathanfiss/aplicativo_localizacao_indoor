<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_seleciona_lista"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvNomeCompletoAdapter"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:hint="@string/hint_nome"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvEmailAdapter"
                android:layout_width="369dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:hint="@string/hint_valor"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/tvNomeCompletoAdapter"
                app:layout_constraintStart_toStartOf="@+id/tvNomeCompletoAdapter"
                app:layout_constraintTop_toBottomOf="@+id/tvNomeCompletoAdapter" />

            <TextView
                android:id="@+id/tvFuncaoAdapter"
                android:layout_width="212dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/tv_distancia"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvEmailAdapter"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailAdapter"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvMatriculaAdapter"
                android:layout_width="143dp"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/tvNomeCompletoAdapter"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tvEmailAdapter"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailAdapter" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>